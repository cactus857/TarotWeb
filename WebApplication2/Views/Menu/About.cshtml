        <li>Address: 19 Nguyễn Văn Linh, Tân Phong, Quận 7</li>
    </ul>
</div>

@section Styles {
    <style>
        body {
            background-color: #1A1A1A; /* Dark background */
            color: #E8E1EF; /* Soft moonlight white */
            font-family: Arial, sans-serif;
            background-image: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><rect width="100" height="100" fill="%231A1A1A"/><circle cx="50" cy="50" r="1" fill="%23E8C5B0" opacity="0.2"/></svg>');
            background-size: 30px 30px;
        }

        .about-container {
            max-width: 800px;
            margin: 40px auto;
            padding: 30px;
            background-color: rgba(19, 24, 44, 0.97); /* Deep midnight blue */
            border-radius: 15px;
            box-shadow: 0 0 25px rgba(235, 187, 167, 0.1); /* Subtle rose gold glow */
            border: 1px solid rgba(235, 187, 167, 0.2); /* Subtle rose gold border */
            position: relative;
            overflow: hidden;
        }

        /* Decorative corner elements */
        .about-container::before,
        .about-container::after {
            content: "✧";
            position: absolute;
            color: rgba(235, 187, 167, 0.15);
            font-size: 2em;
        }

        .about-container::before {
            top: 10px;
            left: 10px;
        }

        .about-container::after {
            bottom: 10px;
            right: 10px;
        }

        .about-container h1,
        .about-container h2 {
            color: #E8C5B0; /* Rose gold */
            margin-top: 1.5em;
            margin-bottom: 0.8em;
            letter-spacing: 0.5px;
            text-shadow: 0 0 10px rgba(235, 187, 167, 0.2);
        }

        .about-container h1 {
            font-size: 2.4em;
            margin-top: 0.5em;
            text-align: center;
            margin-bottom: 1.2em;
        }

        .about-container p,
        .about-container ul {
            color: #E8E1EF; /* Soft moonlight white */
            line-height: 1.7;
            margin-bottom: 1.2em;
            letter-spacing: 0.2px;
        }

        .about-container ul {
            list-style: none;
            padding: 0;
        }

        .about-container li {
            margin-bottom: 12px;
            padding-left: 25px;
            position: relative;
        }

        .about-container li:before {
            content: "✧";
            position: absolute;
            left: 0;
            color: #C89F9C; /* Muted rose gold */
        }

        .about-container a {
            text-decoration: none;
            color: #C89F9C; /* Muted rose gold */
            transition: all 0.3s ease;
            position: relative;
            padding-bottom: 2px;
        }

        .about-container a:hover {
            color: #F2D4CA; /* Light rose gold */
        }

        .about-container a::after {
            content: '';
            position: absolute;
            width: 0;
            height: 1px;
            bottom: 0;
            left: 0;
            background-color: #F2D4CA;
            transition: width 0.3s ease;
        }

        .about-container a:hover::after {
            width: 100%;
        }

        /* Add subtle hover effect to sections */
        .about-container h2 {
            transition: transform 0.3s ease;
        }

        .about-container h2:hover {
            transform: translateX(5px);
        }

        /* Responsive adjustments */
        @@media (max-width: 768px) {
            .about-container {
                margin: 20px;
                padding: 20px;
            }

            .about-container h1 {
                font-size: 2em;
            }

            .about-container h2 {
                font-size: 1.5em;
            }
        }
    </style>
}