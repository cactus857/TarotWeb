    @section Styles {
        <style>
            body {
                background-color: #221831; /* Set background color for the page */
                color: #f9f9f9; /* Set default text color to light */
                font-family: Arial, sans-serif; /* Use a legible font */
            }
            .about-container {
                max-width: 50%;
            }

                .about-container h1,
                .about-container h2 {
                    color: #EC4400; /* Set headings color */
                }

                .about-container p,
                .about-container ul {
                    color: #f9f9f9; /* Ensure paragraphs and lists are light */
                    line-height: 1.6; /* Increase line height for readability */
                }

                .about-container ul {
                    list-style: none; /* Remove default list styling */
                    padding: 0; /* Remove padding */
                    margin: 0; /* Remove margin */
                }

                .about-container li {
                    margin-bottom: 10px; /* Add spacing between list items */
                }

                .about-container a {
                    text-decoration: none;
                    color: #f29f05; /* Color for links */
                }

                    .about-container a:hover {
                        color: #d98804; /* Darker color on hover */
                    }
            /* Text container */
            .content-container {
                display: flex;
                justify-content: space-between; /* Ensure there's no gap between items */
                align-items: center;
                max-width: 80%;
                padding: 20px;
                margin-left:15%;
                margin-top:5%;
                padding:10%;
                background-color: rgba(0, 0, 0, 0.5);
                border-radius: 10px; /* Rounded corners */
                box-shadow: 0 0 15px rgba(0, 0, 0, 0.3); /* Box shadow */
            }
            @@media (max-width: 768px) {
                .content-container {
                    display: flex;
                    justify-content: space-between; /* Ensure there's no gap between items */
                    align-items: center;
                    max-width: 80%;
                    padding: 20px;
                    margin-left: 15%;
                    margin-top: 5%;
                    padding: 10%;
                    background-color: rgba(0, 0, 0, 0.5);
                    border-radius: 10px; /* Rounded corners */
                    box-shadow: 0 0 15px rgba(0, 0, 0, 0.3); /* Box shadow */
                    flex-direction: column;
                }
            }
            /* Text container */
            .text-content {
                flex-basis: 50%;
                padding-right: 5px; /* Reduce or remove padding to minimize the gap */
                text-align: justify;
                margin: 0; /* Remove margins */
            }

            /* Card container */
            .welcome__card-container {
                flex-basis: 50%;
                display: flex;
                align-items: center;
                justify-content: center;
                perspective: 1000px;
                margin: 0; /* Ensure no margin */
                padding: 0; /* Remove padding */
            }

            .the-card {
                position: center;
                width: 250px; /* Full width of the container */
                height: 400px; /* Full height of the container */
                transform-style: preserve-3d;
                transform-origin: center;
                animation-name: cardRotate;
                animation-duration: 8s;
                animation-iteration-count: infinite;
                animation-timing-function: cubic-bezier(0.5, 0, 0.5, 1);
            }

            .the-card__front,
            .the-card__back {
                position: absolute;
                width: 100%; /* Match the container's width */
                height: 100%; /* Match the container's height */
                backface-visibility: hidden;
                overflow: hidden; /* Prevent overflow */
            }

            .the-card__front {
                z-index: 2; /* Ensure the front side is on top */
            }

            /* Make the video stretch to fill the entire front */
            #home-front-image {
                width: 100%; /* Full width */
                height: 100%; /* Full height */
                object-fit: cover; /* Stretch video to fill the card */
            }

            /* Make the image stretch to fill the entire back */
            .card-back-image {
                width: 100%; /* Full width */
                height: 100%; /* Full height */
                object-fit: cover; /* Stretch image to fill the card */
            }

            .the-card__back {
                transform: rotateY(180deg); /* Rotate the back to align with the front */
            }

            /* Keyframe for smooth rotation */
            @@keyframes cardRotate {
                0% {
                    transform: rotateY(0);
                }

                50% {
                    transform: rotateY(180deg);
                }

                100% {
                    transform: rotateY(360deg);
                }
            }

            /* Removing any unwanted white backgrounds */
            .welcome__card-container, .the-card__front, .the-card__back {
                background: none; /* No background color */
                margin: 0; /* Remove margin */
                padding: 0; /* Remove padding */
                border: none; /* No borders */
            }

            .glare {
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: rgba(255, 255, 255, 0.1); /* Optional glare effect */
                pointer-events: none;
            }

            /* Styles for the heading */
            .ele-title {
                color: darkgoldenrod;
            }

            h1 {
                color: white;
            }

            p {
                color: white;
            }

            /* Button styling */
            .button {
                background-color: #ff5f00;
                color: white;
                padding: 10px 20px;
                text-decoration: none;
                border-radius: 5px;
                margin-top: 20px;
            }

                .button:hover {
                    background-color: #e65300;
                }

            .icon-section {
                display: flex; /* Flexbox for icons */
                justify-content: space-between; /* Space between icons */
                flex-wrap: wrap; /* Wrap icons to next line */
            }

            .icon-card {
                background-color: rgba(255, 255, 255, 0.1); /* Background color of icon card */
                border-radius: 10px; /* Rounded corners */
                padding: 20px; /* Padding for icon card */
                text-align: center; /* Center text */
                flex: 1 1 200px; /* Flex properties */
                margin: 10px; /* Margin between icon cards */
            }

                .icon-card img {
                    width: 60px; /* Size of the icon */
                    height: 60px; /* Size of the icon */
                    margin-bottom: 10px; /* Space below the icon */
                }

                .icon-card h3 {
                    font-size: 1.5em; /* Size of the heading in icon card */
                    margin-bottom: 10px; /* Space below the heading */
                }

            .news-section {
                margin-top: 40px; /* Space above news section */
            }

                .news-section h2 {
                    font-size: 2.5em; /* Size of the news heading */
                    margin-bottom: 20px; /* Space below the heading */
                }

            .news-container {
                display: flex; /* Flexbox for news cards */
                justify-content: space-between; /* Space between news cards */
                flex-wrap: wrap; /* Allow wrapping */
            }

            .news-card {
                background-color: #2c2a30; /* Background color for news card */
                border-radius: 10px; /* Rounded corners */
                width: calc(33.33% - 20px); /* Width for three cards in a row */
                margin: 10px; /* Space around cards */
                overflow: hidden; /* Hide overflow */
                position: relative; /* Positioning context */
                display: flex; /* Flexbox layout */
                flex-direction: column; /* Column layout */
            }

                .news-card img {
                    width: 100%; /* Image width */
                    height: auto; /* Image height */
                }

                .news-card h3 {
                    padding: 10px; /* Padding for title */
                    font-size: 1.5em; /* Size of the title */
                }

                .news-card p {
                    padding: 10px; /* Padding for text */
                    flex-grow: 1; /* Allow the paragraph to grow */
                }

                .news-card span {
                    padding: 10px; /* Padding for date */
                    font-size: 0.8em; /* Size of date */
                    color: #bbb; /* Color of date */
                }
        </style>
    }

