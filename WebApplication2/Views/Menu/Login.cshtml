@{
    ViewBag.Title = "Admin Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background-color: #1A1A1A;
        color: #E8E1EF;
        font-family: Arial, sans-serif;
        background-image: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><rect width="100" height="100" fill="%231A1A1A"/><circle cx="50" cy="50" r="1" fill="%23E8C5B0" opacity="0.2"/></svg>');
        background-size: 30px 30px;
    }

    .login-container {
        width: 50%;
        margin: 40px auto;
        padding: 30px;
        background-color: rgba(19, 24, 44, 0.97);
        border-radius: 15px;
        box-shadow: 0 0 25px rgba(235, 187, 167, 0.1);
        border: 1px solid rgba(235, 187, 167, 0.2);
        position: relative;
        overflow: hidden;
    }

        .login-container::before,
        .login-container::after {
            content: "✧";
            position: absolute;
            color: rgba(235, 187, 167, 0.15);
            font-size: 2em;
        }

        .login-container::before {
            top: 10px;
            left: 10px;
        }

        .login-container::after {
            bottom: 10px;
            right: 10px;
        }

        .login-container h1 {
            color: #E8C5B0;
            margin-top: 0.5em;
            text-align: center;
            margin-bottom: 1.2em;
            font-size: 2.4em;
            letter-spacing: 0.5px;
            text-shadow: 0 0 10px rgba(235, 187, 167, 0.2);
        }

    .login-form {
        width:100%;
        background-color: rgba(30, 35, 55, 0.8);
        padding: 30px;
        border-radius: 10px;
        border: 1px solid rgba(235, 187, 167, 0.2);
    }

    .form-label {
        color: #E8C5B0;
        margin-bottom: 0.5em;
    }

    .form-control {
        background-color: rgba(25, 30, 50, 0.7);
        border: 1px solid rgba(235, 187, 167, 0.3);
        color: #E8E1EF;
    }

        .form-control:focus {
            background-color: rgba(25, 30, 50, 0.9);
            border-color: #C89F9C;
            box-shadow: 0 0 10px rgba(200, 159, 156, 0.3);
            color: #E8E1EF;
        }

    .input-group-text {
        background-color: rgba(25, 30, 50, 0.7);
        border: 1px solid rgba(235, 187, 167, 0.3);
        color: #C89F9C;
    }

    .btn-primary {
        background-color: #C89F9C;
        border-color: #E8C5B0;
        color: #1A1A1A;
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #E8C5B0;
            border-color: #C89F9C;
            transform: scale(1.02);
        }

    .alert-danger {
        background-color: rgba(255, 0, 0, 0.2);
        border-color: rgba(255, 0, 0, 0.3);
        color: #E8E1EF;
    }
</style>

<div class="login-container">
    <h1>Admin Login</h1>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form action="/Menu/Login" method="post" class="login-form">
                <div class="mb-3">
                    <label for="Username" class="form-label">
                        <i class="fas fa-user me-2"></i>Username
                    </label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-user"></i></span>
                        <input type="text"
                               class="form-control"
                               id="Username"
                               name="Username"
                               placeholder="Enter your username"
                               required
                               autocomplete="username">
                    </div>
                </div>
                <div class="mb-3">
                    <label for="Password" class="form-label">
                        <i class="fas fa-lock me-2"></i>Password
                    </label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-lock"></i></span>
                        <input type="password"
                               class="form-control"
                               id="Password"
                               name="Password"
                               placeholder="Enter your password"
                               required
                               autocomplete="current-password">
                    </div>
                </div>

                @if (ViewBag.ErrorMessage != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        @ViewBag.ErrorMessage
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                <div class="d-grid">
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="fas fa-sign-in-alt me-2"></i>Login
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

