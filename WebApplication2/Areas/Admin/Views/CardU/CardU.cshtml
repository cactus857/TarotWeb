@model IEnumerable<WebApplication2.Models.cardtable_use>

@{
    ViewBag.Title = "CardU";
    Layout = "~/Areas/Admin/Views/Shared/_MyLayout.cshtml";
}
<link href="~/Areas/Admin/Content/css_/site.css" rel="stylesheet" />
<h2>CardU</h2>

<style>
    th, td {
        text-align: center;
    }

        td p {
            height: 50px;
            overflow-y: hidden;
            text-overflow: ellipsis;
        }
</style>

@section _Header
{
    <!-- DataTables CSS -->
    <link href="/Areas/admin/Content/vendor/datatables-plugins/dataTables.bootstrap.css" rel="stylesheet">
    <!-- DataTables Responsive CSS -->
    <link href="/Areas/admin/Content/vendor/datatables-responsive/dataTables.responsive.css" rel="stylesheet">

}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-red">
            <div class="panel-heading">
                Quản lý Card C
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <p>
                    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-details" })
                </p>
                <table class="table table-striped table-bordered table-hover" id="dataTables-example" style="width:100%">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.link)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.situation)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.obstacle)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.advice)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.name)
                                </td>
                                <td>
                                    <img src="~/Content/images/@item.link" alt="alt" style="max-width: 150px; max-height: 150px; width: auto; height: auto;" />
                                </td>
                                <td>
                                    @Html.Raw(item.situation)
                                </td>
                                <td>

                                    @Html.Raw(item.obstacle)
                                </td>
                                <td>
                                    @Html.Raw(item.advice)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.id }, new { @class = "btn btn-edit" })
                                    @Html.ActionLink("Delete", "Delete", new { id = item.id }, new { @class = "btn btn-delete" })
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
@section _Footer
{
    <!-- DataTables JavaScript -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script> <!-- Ensure jQuery is loaded first -->
    <script src="/Areas/admin/Content/vendor/datatables/js/jquery.dataTables.min.js"></script>
    <script src="/Areas/admin/Content/vendor/datatables-plugins/dataTables.bootstrap.min.js"></script>
    <script src="/Areas/admin/Content/vendor/datatables-responsive/dataTables.responsive.js"></script>

    <script>
        $(document).ready(function () {
            // Check if DataTable is already initialized
            if (!$.fn.DataTable.isDataTable('#dataTables-example')) {
                $('#dataTables-example').DataTable({
                    responsive: true
                });
            }
        });
    </script>
}
