@model IEnumerable<WebApplication2.Models.cardtable_use>

@{
    ViewBag.Title = "CardU";
    Layout = "~/Areas/Admin/Views/Shared/_MyLayout.cshtml";
}
<link href="~/Areas/Admin/Content/css_/site.css" rel="stylesheet" />
<h2>CardU</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-details" })

</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.link)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.situation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.obstacle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.advice)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            <img src="~/Content/images/major-arcana/@item.link" alt="alt" style="max-width: 150px; max-height: 150px; width: auto; height: auto;" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.situation)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.obstacle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.advice)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.id }, new { @class = "btn btn-edit" })
            @Html.ActionLink("Delete", "Delete", new { id = item.id }, new { @class = "btn btn-delete" })
        </td>
    </tr>
}

</table>
