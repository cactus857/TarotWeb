@model IEnumerable<WebApplication2.Models.readertable>

@{
    ViewBag.Title = "ManaReader";
    Layout = "~/Areas/Admin/Views/Shared/_MyLayout.cshtml";
}


<link href="~/Areas/Admin/Content/css_/site.css" rel="stylesheet" />
<style>
    th, td {
        text-align: center;
    }

        td p {
            height: 50px;
            overflow-y: hidden;
            text-overflow: ellipsis;
        }
</style>

@section _Header
{
    <!-- DataTables CSS -->
    <link href="/Areas/admin/Content/vendor/datatables-plugins/dataTables.bootstrap.css" rel="stylesheet">
    <!-- DataTables Responsive CSS -->
    <link href="/Areas/admin/Content/vendor/datatables-responsive/dataTables.responsive.css" rel="stylesheet">

}

<h2>ManaReader</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-details" })
</p>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-red">
            <div class="panel-heading">
                Quản lý Tin tức
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <p>
                    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-details" })
                </p>
                <table class="table table-striped table-bordered table-hover" id="dataTables-example" style="width:100%">
                    <thead>
                        <tr>
                            <th>
                                Tên Reader
                            </th>
                            <th>
                                Cấp bậc
                            </th>
                            <th>
                                Link liện hệ
                            </th>
                            <th>
                                Avatar
                            </th>
                            <th>
                                Địa chỉ
                            </th>
                            <th>
                                SĐT
                            </th>
                            <th>
                                Chi tiết 1
                            </th>
                            <th>
                                Chi tiết 2
                            </th>
                            <th>
                                Chi tiết 3
                            </th>
                            <th>
                                Chi tiết 4
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.position)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.link)
                                </td>
                                <td>
                                    <img src="~/Content/images/@item.img" alt="alt" style="max-width: 150px; max-height: 150px; width: auto; height: auto;" />
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.address)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.phone)
                                </td>
                                <td>
                                    @Html.Raw(item.detail_1)
                                </td>
                                <td>
                                    @Html.Raw(item.detail_2)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.detail_3)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.detail_4)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.id }, new { @class = "btn btn-edit" })
                                    @Html.ActionLink("Delete", "Delete", new { id = item.id }, new { @class = "btn btn-delete" })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
@section _Footer
{
    <!-- DataTables JavaScript -->
    <script src="/Areas/admin/Content/vendor/datatables/js/jquery.dataTables.min.js"></script>
    <script src="/Areas/admin/Content/vendor/datatables-plugins/dataTables.bootstrap.min.js"></script>
    <script src="/Areas/admin/Content/vendor/datatables-responsive/dataTables.responsive.js"></script>
    <!-- Page-Level Demo Scripts - Tables - Use for reference -->
    <script>
        $(document).ready(function () {
            $('#dataTables-example').DataTable({
                responsive: true
            });
        });
    </script>

}
