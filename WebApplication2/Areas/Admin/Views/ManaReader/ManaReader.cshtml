@model IEnumerable<WebApplication2.Models.readertable>

@{
    ViewBag.Title = "ManaReader";
    Layout = "~/Areas/Admin/Views/Shared/_MyLayout.cshtml";
}

<link href="~/Areas/Admin/Content/css_/site.css" rel="stylesheet" />
<h2>ManaReader</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-details" })
</p>
<table class="table">
    <tr>
        <th>
            Tên Reader
        </th>
        <th>
            Cấp bậc
        </th>
        <th>
            Link liện hệ
        </th>
        <th>
            Avatar
        </th>
        <th>
            Địa chỉ
        </th>
        <th>
            SĐT
        </th>
        <th>
            Chi tiết 1
        </th>
        <th>
            Chi tiết 2
        </th>
        <th>
            Chi tiết 3
        </th>
        <th>
            Chi tiết 4
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.position)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.link)
            </td>
            <td>
                <img src="~/Content/images/@item.img" alt="alt" style="max-width: 150px; max-height: 150px; width: auto; height: auto;" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.detail_1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.detail_2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.detail_3)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.detail_4)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.id }, new { @class = "btn btn-edit" })
                @Html.ActionLink("Delete", "Delete", new { id = item.id }, new { @class = "btn btn-delete" })
            </td>
        </tr>
    }

</table>
